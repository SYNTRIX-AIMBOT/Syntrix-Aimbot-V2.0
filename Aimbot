-- Why Button hover effect
whyButton.MouseEnter:Connect(function()
    whyButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
end)

whyButton.MouseLeave:Connect(function()
    whyButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
end)

whyButton.MouseButton1Down:Connect(function()
    whyButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
end)

whyButton.MouseButton1Up:Connect(function()
    whyButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
end)

-- Continue Button hover effect
continueButton.MouseEnter:Connect(function()
    continueButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
end)

continueButton.MouseLeave:Connect(function()
    continueButton.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
end)

continueButton.MouseButton1Down:Connect(function()
    continueButton.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
end)

continueButton.MouseButton1Up:Connect(function()
    continueButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
end)

-- Why GUI
local function createWhyGUI()
    local whyGui = Instance.new("ScreenGui")
    whyGui.Name = "WhyDiscontinuedGUI"
    whyGui.ResetOnSpawn = false
    whyGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    
    local whyFrame = Instance.new("Frame")
    whyFrame.Name = "WhyFrame"
    whyFrame.Size = UDim2.new(0, 450, 0, 400)
    whyFrame.Position = UDim2.new(0.5, -225, 0.5, -200)
    whyFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    whyFrame.BorderSizePixel = 0
    whyFrame.Parent = whyGui
    
    local whyCorner = Instance.new("UICorner")
    whyCorner.CornerRadius = UDim.new(0, 12)
    whyCorner.Parent = whyFrame
    
    -- Top Bar
    local whyTopBar = Instance.new("Frame")
    whyTopBar.Name = "TopBar"
    whyTopBar.Size = UDim2.new(1, 0, 0, 40)
    whyTopBar.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    whyTopBar.BorderSizePixel = 0
    whyTopBar.Parent = whyFrame
    
    local whyTopCorner = Instance.new("UICorner")
    whyTopCorner.CornerRadius = UDim.new(0, 12)
    whyTopCorner.Parent = whyTopBar
    
    local whyTopBarFix = Instance.new("Frame")
    whyTopBarFix.Size = UDim2.new(1, 0, 0, 12)
    whyTopBarFix.Position = UDim2.new(0, 0, 1, -12)
    whyTopBarFix.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    whyTopBarFix.BorderSizePixel = 0
    whyTopBarFix.Parent = whyTopBar
    
    local whyTitle = Instance.new("TextLabel")
    whyTitle.Name = "Title"
    whyTitle.Size = UDim2.new(1, -50, 1, 0)
    whyTitle.Position = UDim2.new(0, 10, 0, 0)
    whyTitle.BackgroundTransparency = 1
    whyTitle.Font = Enum.Font.GothamBold
    whyTitle.Text = "‚ùì Why Was V2 Discontinued?"
    whyTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
    whyTitle.TextSize = 18
    whyTitle.TextXAlignment = Enum.TextXAlignment.Left
    whyTitle.Parent = whyTopBar
    
    local whyCloseButton = Instance.new("TextButton")
    whyCloseButton.Name = "CloseButton"
    whyCloseButton.Size = UDim2.new(0, 30, 0, 30)
    whyCloseButton.Position = UDim2.new(1, -35, 0, 5)
    whyCloseButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    whyCloseButton.BorderSizePixel = 0
    whyCloseButton.Font = Enum.Font.GothamBold
    whyCloseButton.Text = "√ó"
    whyCloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    whyCloseButton.TextSize = 24
    whyCloseButton.Parent = whyTopBar
    
    local whyCloseCorner = Instance.new("UICorner")
    whyCloseCorner.CornerRadius = UDim.new(0, 6)
    whyCloseCorner.Parent = whyCloseButton
    
    -- Scrolling Frame for content
    local scrollFrame = Instance.new("ScrollingFrame")
    scrollFrame.Name = "ScrollFrame"
    scrollFrame.Size = UDim2.new(1, -40, 1, -100)
    scrollFrame.Position = UDim2.new(0, 20, 0, 50)
    scrollFrame.BackgroundTransparency = 1
    scrollFrame.BorderSizePixel = 0
    scrollFrame.ScrollBarThickness = 6
    scrollFrame.ScrollBarImageColor3 = Color3.fromRGB(100, 100, 100)
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 600)
    scrollFrame.Parent = whyFrame
    
    local whyMessage = Instance.new("TextLabel")
    whyMessage.Name = "Message"
    whyMessage.Size = UDim2.new(1, -10, 0, 580)
    whyMessage.BackgroundTransparency = 1
    whyMessage.Font = Enum.Font.Gotham
    whyMessage.Text = [[After a lot of thought, I‚Äôve decided to officially discontinue Syntrix V2.

Over time, I realized the project no longer met the standard I want my work to reflect. While it functions and remains usable, I don‚Äôt feel motivated to continue building on it.

V2 was a valuable learning experience. It helped me grow in scripting, system design, and managing a community. I‚Äôm grateful to everyone who used it, gave feedback, and supported the project.

The script will remain available in its current state, but there will be no future updates, features, or fixes.

Thank you for being part of it.

‚Äî Synx]]
    whyMessage.TextColor3 = Color3.fromRGB(220, 220, 220)
    whyMessage.TextSize = 14
    whyMessage.TextWrapped = true
    whyMessage.TextYAlignment = Enum.TextYAlignment.Top
    whyMessage.TextXAlignment = Enum.TextXAlignment.Left
    whyMessage.Parent = scrollFrame
    
    -- Close button functionality
    whyCloseButton.MouseButton1Click:Connect(function()
        whyGui:Destroy()
    end)
    
    -- Make draggable
    local whyDragging
    local whyDragInput
    local whyDragStart
    local whyStartPos
    
    local function whyUpdate(input)
        local delta = input.Position - whyDragStart
        whyFrame.Position = UDim2.new(
            whyStartPos.X.Scale,
            whyStartPos.X.Offset + delta.X,
            whyStartPos.Y.Scale,
            whyStartPos.Y.Offset + delta.Y
        )
    end
    
    whyTopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            whyDragging = true
            whyDragStart = input.Position
            whyStartPos = whyFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    whyDragging = false
                end
            end)
        end
    end)
    
    whyTopBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            whyDragInput = input
        end
    end)
    
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if input == whyDragInput and whyDragging then
            whyUpdate(input)
        end
    end)
    
    -- Parent to CoreGui or PlayerGui
    local success = pcall(function()
        whyGui.Parent = game:GetService("CoreGui")
    end)
    
    if not success then
        whyGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
    end
end

-- Why Button Functionality
whyButton.MouseButton1Click:Connect(function()
    createWhyGUI()
end)

-- Continue Button Functionality
continueButton.MouseButton1Click:Connect(function()
    continueButton.Text = "Loading V2..."
    continueButton.BackgroundColor3 = Color3.fromRGB(150, 150, 150)
    task.wait(0.5)
    screenGui:Destroy()
    
    -- Load the main V2 script
    loadstring(game:HttpGet("https://raw.githubusercontent.com/SYNTRIX-AIMBOT/Syntrix-Aimbot-V2.0/refs/heads/main/v2"))()
end)

-- Close Button Functionality
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Minimize functionality
local isMinimized = false
minimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    
    if isMinimized then
        contentFrame.Visible = false
        mainFrame:TweenSize(UDim2.new(0, 400, 0, 40), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
        minimizeButton.Text = "+"
    else
        mainFrame:TweenSize(UDim2.new(0, 400, 0, 280), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true, function()
            contentFrame.Visible = true
        end)
        minimizeButton.Text = "‚àí"
    end
end)

-- Make main frame draggable
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    mainFrame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

topBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

topBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- Parent to CoreGui or PlayerGui
local success = pcall(function()
    screenGui.Parent = game:GetService("CoreGui")
end)

if not success then
    screenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
end
